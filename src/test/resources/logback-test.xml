<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<!-- logを標準出力に出力 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- ターゲットを標準出力へ -->
		<Target>System.out</Target>
		<!-- パターンレイアウト -->
		<encoder>
			<pattern>%m%n</pattern>
		</encoder>
	</appender>

	<appender name="AuditLogEventSubscriberTest" class="jp.co.future.uroborosql.testlog.TestAppender">
		<encoder>
			<pattern>%m%n</pattern>
		</encoder>
	</appender>

	<appender name="SecretColumnEventInitializeTest" class="jp.co.future.uroborosql.testlog.TestAppender">
		<encoder>
			<pattern>%m%n</pattern>
		</encoder>
	</appender>

	<appender name="DebugEventSubscriberTest" class="jp.co.future.uroborosql.testlog.TestAppender">
		<encoder>
			<pattern>%m%n</pattern>
		</encoder>
	</appender>

	<appender name="DumpResultEventSubscriberTest" class="jp.co.future.uroborosql.testlog.TestAppender">
		<encoder>
			<pattern>%m%n</pattern>
		</encoder>
	</appender>

	<appender name="TransactionalEventSubscriberTest" class="jp.co.future.uroborosql.testlog.TestAppender">
		<encoder>
			<pattern>%m%n</pattern>
		</encoder>
	</appender>

	<appender name="EventSubscriberRegisterTest" class="jp.co.future.uroborosql.testlog.TestAppender">
		<encoder>
			<pattern>%m%n</pattern>
		</encoder>
	</appender>

	<logger name="jp.co.future.uroborosql.event.AuditLogEventSubscriber"
		level="DEBUG" additivity="false">
		<appender-ref ref="AuditLogEventSubscriberTest" />
	</logger>

	<logger name="jp.co.future.uroborosql.event.AbstractSecretColumnEventSubscriber"
		level="DEBUG" additivity="false">
		<appender-ref ref="SecretColumnEventInitializeTest" />
	</logger>

	<logger name="jp.co.future.uroborosql.event.DebugEventSubscriber"
		level="DEBUG" additivity="false">
		<appender-ref ref="DebugEventSubscriberTest" />
	</logger>

	<logger name="jp.co.future.uroborosql.event.DumpResultEventSubscriber"
		level="DEBUG" additivity="false">
		<appender-ref ref="DumpResultEventSubscriberTest" />
	</logger>

	<logger name="jp.co.future.uroborosql.event.TransactionalEventSubscriberTest"
		level="DEBUG" additivity="false">
		<appender-ref ref="TransactionalEventSubscriberTest" />
	</logger>

	<logger name="jp.co.future.uroborosql.event.EventSubscriberRegisterTest"
		level="DEBUG" additivity="false">
		<appender-ref ref="EventSubscriberRegisterTest" />
	</logger>

	<appender name="CoverageLog" class="ch.qos.logback.core.FileAppender">
		<file>target/coverage.log</file>
		<append>true</append>
		<encoder>
			<pattern>%m%n</pattern>
		</encoder>
	</appender>

	<logger name="jp.co.future.uroborosql.coverage" level="TRACE"
		additivity="false">
		<appender-ref ref="CoverageLog" />
	</logger>

	<!-- ログ出力に関する設定 -->
	<root>
		<!-- 出力するレベルを設定 -->
		<level value="${logback.loglevel:-OFF}" />

		<!-- アペンダを設定 -->
		<appender-ref ref="STDOUT" />
	</root>
</configuration>